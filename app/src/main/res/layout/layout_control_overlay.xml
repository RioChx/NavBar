<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DD1A1A1A"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/control_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">
        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="BAR CONTROLS" android:textColor="#88FFFFFF" android:textSize="10sp" />
        <ImageView android:id="@+id/btn_close_settings" android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Transparency" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
    <SeekBar android:id="@+id/seek_transparency" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" />
    
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Scale" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
    <SeekBar android:id="@+id/seek_scale" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="200" />

</LinearLayout>
